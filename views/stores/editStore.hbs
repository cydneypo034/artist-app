<form method="POST" action="/artstore/{{store}}?_method=PUT">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="{{name}}"/>

    <label for="address">Address</label>
    <input type="text" name="address" placeholder="{{address}}" />

    <label for="yearsOpen">Years Open</label>
    <input type="text" name="yearsOpen" placeholder="{{yearsOpen}}"/>

    <label for="website">Website</label>
    <input type="text" name="website" placeholder="{{website}}"/>

    <label for="manager">Managers</label>
    <input type="text" name="managers" placeholder="{{managers}}"/>

    <label for="availableClasses">Available Classes</label>
    <input type="text" name="availableClasses" placeholder="{{availableClasses}}"/>

    <input type="submit" value="Save Store" />

</form>




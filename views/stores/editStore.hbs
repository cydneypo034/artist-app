<form method="POST" action="/artstore/{{store}}?_method=PUT">
    <label for="name">Name</label>
    <input type="text" name="name" value="name" placeholder="{{store.name}}"/>

    <label for="address">Address</label>
    <input type="text" name="address" value="address" placeholder="{{store.address}}" />

    <label for="yearsOpen">Years Open</label>
    <input type="text" name="yearsOpen" value="yearsOpen" placeholder="{{store.yearsOpen}}"/>

    <label for="website">Website</label>
    <input type="text" name="website" value="website" placeholder="{{store.website}}"/>

    <label for="manager">Managers</label>
    <input type="text" name="managers" value="managers" placeholder="{{store.managers}}"/>

    <label for="availableClasses">Available Classes</label>
    <input type="text" name="availableClasses" value="availableClasses" {{#if store.availableClasses}} checked {{/if}}/>

    <input type="submit" value="Save Store" />

</form>




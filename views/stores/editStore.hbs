<div class="intro-font">
<p class="text-center">Click on "Save Store" once you're done editting your store.</p>
</div>

<form method="POST" action="/artstore/{{storeEId._id}}/editstore/?_method=PUT">
<div id="form-text">
    <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{store.name}}" placeholder="Name" />
    </div>
    <div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address" value="{{store.address}}" placeholder="Address" />
    </div>
    <div class="form-group">
    <label for="yearsOpen">Years Open</label>
    <input type="number" name="yearsOpen" value="{{store.yearsOpen}}" placeholder="Enter Number Only"/>
    </div>
    <div class="form-group">
    <label for="website">Website</label>
    <input type="text" name="website" value="{{store.website}}" placeholder="Ex: www.storesite.com" />
    </div>
    <div class="form-group">
    <label for="availableClasses">Available Classes</label>
    <input type="text" name="availableClasses" value="{{store.availableClasses}}" placeholder="Ex: Painting" />
    </div>
    </div>
    <input type="submit" class= "btn btn-default btn-success" value="Save Store" />
</form>

<br>

<a href="/artstore" class= "btn btn-default btn-warning">View All Stores</a>

<a href="/materialstore" class= "btn btn-default btn-warning">View All Materials</a>



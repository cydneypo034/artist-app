<form method="POST" action="/artstore/{{_id}}?_method=PUT">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{oneStore.name}}"/>

    <label for="address">Address</label>
    <input type="text" name="address" value="{{oneStore.address}}" />

    <label for="yearsOpen">Years Open</label>
    <input type="text" name="yearsOpen" value="{{oneStore.yearsOpen}}"/>

    <label for="website">Website</label>
    <input type="text" name="website" value="{{oneStore.website}}"/>

    <label for="manager">Managers</label>
    <input type="text" name="managers" value="{{oneStore.managers}}"/>

    <label for="availableClasses">Available Classes</label>
    <input type="checkbox" name="availableClasses" value="true"
    {{#if oneStore.availableClasses}} checked {{/if}}/>

    <input type="submit" value="Save Store" />

</form>


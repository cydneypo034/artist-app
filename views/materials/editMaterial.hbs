<div class="intro-font">
<p class="text-center">Click on "Save Material" once you're done editting your material. </p>
</div>

<form method="POST" action="/materialstore/{{materialEId._id}}/editmaterial/?_method=PUT">
<div id="form-text">
    <div class="form-group">
    <label for="type">Type</label>
    <input type="text" name="type" value="{{material.type}}" placeholder="Ex. Paintbrush"/>
    </div>
    <div class="form-group">
    <label for="quantity">Quantity</label>
    <input type="text" name="quantity" value="{{material.quantity}}" placeholder="Enter Number"/>
    </div>
    <div class="form-group">
    <label for="brandName">Brand Name</label>
    <input type="text" name="brandName" value="{{material.brandName}}" placeholder="Enter Brand Name"/>
    </div>
    <div class="form-group">
    <label for="cost">Cost</label>
    <input type="number" name="cost" value="{{material.cost}}" placeholder="Enter Number Only"/>
    </div>
    <input type="submit" class= "btn btn-default btn-success" value="Save Material" />
</div>
</form>

<br>
<a href="/artstore" class= "btn btn-default btn-warning">View All Stores</a>

<a href="/materialstore" class= "btn btn-default btn-warning">View All Materials</a>
